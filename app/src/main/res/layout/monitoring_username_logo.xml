<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_select_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@drawable/shape_cricle_bg_gray"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/jiancha_avatar"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/iv_user_icon"
        android:gravity="center_vertical"
        android:text="李四"
        android:textColor="@color/blue_07"
        android:textSize="@dimen/sp_16"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/iv_user_icon"
        android:gravity="center_vertical"
        android:text="本周计划监察"
        android:textColor="@color/gray_3f"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_plan_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_toEndOf="@id/tv_temp1"
        android:text="0"
        android:textColor="@color/blue_07"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_toEndOf="@id/tv_plan_count"
        android:gravity="center_vertical"
        android:text="次：实际监察"
        android:textColor="@color/gray_3f"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText"/>


    <TextView
        android:id="@+id/tv_actual_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_toEndOf="@id/tv_temp2"

        android:text="0"
        android:textColor="@color/blue_07"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_toEndOf="@id/tv_actual_count"
        android:gravity="center_vertical"
        android:text="次"
        android:textColor="@color/gray_3f"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText"/>

</RelativeLayout>