<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg06"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_24"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_3"
            android:drawableStart="@drawable/selector_btn_back"
            android:text="@string/back"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_company"
        style="@style/userdetail_style_gray_14s"
        android:layout_below="@id/tv_user_name"
        android:text="企业/组织"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_company_name"
        style="@style/userdetail_style_black_s16"
        android:layout_below="@id/tv_company"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <View
        android:id="@+id/view1"
        style="@style/horizontal_line"
        android:layout_below="@id/tv_company_name"/>

    <TextView
        android:id="@+id/tv_organ"
        style="@style/userdetail_style_gray_14s"
        android:layout_below="@id/view1"
        android:text="机构"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_organ_name"
        style="@style/userdetail_style_black_s16"
        android:layout_below="@id/tv_organ"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <View
        android:id="@+id/view2"
        style="@style/horizontal_line"
        android:layout_below="@id/tv_organ_name"/>

    <TextView
        android:id="@+id/tv_project"
        style="@style/userdetail_style_gray_14s"
        android:layout_below="@id/view2"
        android:text="项目组"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_project_name"
        style="@style/userdetail_style_black_s16"
        android:layout_below="@id/tv_project"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <View
        android:id="@+id/view3"
        style="@style/horizontal_line"
        android:layout_below="@id/tv_project_name"/>

    <TextView
        android:id="@+id/tv_class"
        style="@style/userdetail_style_gray_14s"
        android:layout_below="@id/view3"
        android:text="班组"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_class_name"
        style="@style/userdetail_style_black_s16"
        android:layout_below="@id/tv_class"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <View
        android:id="@+id/view4"
        style="@style/horizontal_gray_10"
        android:layout_below="@id/tv_class_name"/>

    <TextView
        android:id="@+id/tv_phone"
        style="@style/userdetail_style_gray_14s"
        android:layout_below="@id/view4"
        android:text="手机号"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <TextView
        android:id="@+id/tv_phone_number"
        style="@style/userdetail_style_black_s16"
        android:layout_below="@id/tv_phone"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <LinearLayout
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_phone_number"
        android:background="@color/color_f6"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:id="@+id/iv_find_track"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_marginEnd="@dimen/dp_15"-->
        <!--android:layout_marginStart="@dimen/dp_20"-->
        <!--android:layout_weight="1"-->
        <!--android:src="@drawable/xx_but_chat_sel"-->
        <!--tools:ignore="ContentDescription"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_start_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/xx_but_chat_sel"
            tools:ignore="ContentDescription,InefficientWeight"/>

    </LinearLayout>


</RelativeLayout>