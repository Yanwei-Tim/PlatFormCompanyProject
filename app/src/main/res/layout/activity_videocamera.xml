<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_problem"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/view_1px"/>

    <include layout="@layout/title_bar_mvp"/>


    <TextView
        android:id="@+id/tv_search_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_search_confirm"
        android:drawablePadding="@dimen/dp_5"
        android:drawableStart="@drawable/search"
        android:gravity="center_vertical"
        android:hint="搜索"
        android:paddingStart="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">


            <LinearLayout
                android:id="@+id/ll_nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/sp_15"
                android:layout_marginStart="@dimen/sp_15"
                android:orientation="vertical"
                android:visibility="gone"
                tools:ignore="ScrollViewSize">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:background="@drawable/bg_nor"
                    tools:ignore="ContentDescription"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_nor"
                    tools:ignore="ContentDescription"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_nor"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_nor"
                    tools:ignore="ContentDescription"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/sp_15"
                android:layout_marginStart="@dimen/sp_15"
                android:orientation="vertical"
                android:visibility="visible"
                tools:ignore="ScrollViewSize">


                <com.babelstar.gviewer.VideoView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:background="@drawable/dialog_background"/>


                <com.babelstar.gviewer.VideoView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/dialog_background"/>


                <com.babelstar.gviewer.VideoView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/dialog_background"/>

                <com.babelstar.gviewer.VideoView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/dialog_background"/>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>


</LinearLayout>