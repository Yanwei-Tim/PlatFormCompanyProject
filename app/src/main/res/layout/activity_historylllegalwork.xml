<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_problem"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg06"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rly_home_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/transition">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@color/transition"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/back"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:visibility="visible"
                tools:ignore="SpUsage"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"/>


            <!--<TextView
                android:id="@+id/tv_title_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                android:background="@drawable/list"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="HardcodedText,RelativeOverlap"/>-->

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_cricle_bg_gray"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableEnd="@drawable/calendar"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:hint="请选择开始时间"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_87"
            tools:ignore="HardcodedText"/>

        <View
            style="@style/horizontal_line"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:drawableEnd="@drawable/calendar"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:hint="请选择结束时间"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_87"
            tools:ignore="HardcodedText"/>

        <View
            style="@style/horizontal_line"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/search02"
            android:gravity="center"
            android:textColor="@color/titel_color"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"/>

</LinearLayout>