<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eae5e5"
        android:padding="5dp"
        android:paddingStart="@dimen/dp_10"
        android:textColor="#424141"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry"/>


    <CheckBox
        android:id="@+id/cb_tiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_item_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_15"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"/>
    <!-- android:background="@drawable/tree_cb_choose_seletor"-->

    <TextView
        android:id="@+id/iv_item_logo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/catalog"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@id/cb_tiem"
        android:background="@drawable/shape_bg_blue32"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        tools:ignore="ContentDescription,MissingConstraints"/>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_55"
        android:layout_below="@id/catalog"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_toEndOf="@id/iv_item_logo"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_8"
        android:textColor="#424141"
        android:textSize="@dimen/sp_16"
        android:visibility="visible"
        tools:ignore="RtlSymmetry"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/iv_item_logo"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="70dp"
        android:background="#E7E7E7"
        tools:ignore="RtlSymmetry"/>

</RelativeLayout>