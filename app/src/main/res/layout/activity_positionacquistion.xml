<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_root_position"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_1px"/>

    <include layout="@layout/title_bar_mvp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/rl_select_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_select_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_gray_line"
                android:gravity="center"
                android:text="@string/select_newadd_type"
                android:textColor="@color/gray_3f"
                android:textSize="@dimen/sp_15"/>

            <LinearLayout
                android:id="@+id/ll_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_select_type"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="@string/jichusheshi"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_13"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="@string/community_park"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_13"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@id/ll_lv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recyclerview_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="请选择基础设施"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/recyclerview_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="请选择区域"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="invisible">

            <Chronometer
                android:id="@+id/ct_timer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_36"/>


            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_5"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_carryon"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_toStartOf="@id/tv_temp"
                    android:background="@drawable/shape_bg_green"
                    android:gravity="center"
                    android:text="@string/carry_on"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry"/>

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:text="@string/caiji_time"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="RtlSymmetry"/>

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_toEndOf="@id/tv_temp"
                    android:background="@drawable/shape_bg_orange"
                    android:gravity="center"
                    android:text="@string/finish_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible"/>


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_time_distance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/red_alittle"
                android:gravity="center"
                android:text="本次采集持续1分钟，距离0.1公里"
                android:textColor="@color/red_des"
                android:textSize="@dimen/sp_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="@string/type"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/tv_quduan_type"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="3.3"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_14"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_14"/>

                <EditText
                    android:id="@+id/edt_msg_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="3.3"
                    android:background="@drawable/shape_gray_line"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_3"
                    android:text="请填写名称"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray_99"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText,LabelFor,RtlSymmetry,TextFields"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="@string/photo"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="3.3"
                    tools:ignore="HardcodedText,TextFields"/>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_release"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/titel_color"
                android:gravity="center"
                android:text="@string/release"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_beginorstop"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_green"
            android:text="@string/begin_acqusition"
            android:textColor="@color/white"
            android:visibility="visible"/>


    </RelativeLayout>


</LinearLayout>