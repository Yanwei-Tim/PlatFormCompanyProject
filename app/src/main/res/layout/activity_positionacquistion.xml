<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_root_position"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_bar_mvp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/rl_select_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_80"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/bg2_white"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_select_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="@string/select_newadd_type"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"/>

            <LinearLayout
                android:id="@+id/ll_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_select_type"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_36"
                    android:background="@color/transparent"
                    android:gravity="center|right"
                    android:text="@string/jichusheshi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="RtlHardcoded"/>

                <TextView
                    android:id="@+id/recyclerview_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/transparent"
                    android:drawableEnd="@drawable/fold"
                    android:gravity="center_vertical"
                    android:hint="请选择基础设施"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText,InefficientWeight"/>


            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_below="@id/ll_lv"
                android:layout_marginEnd="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_95"/>

            <LinearLayout
                android:id="@+id/ll_quduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_lv"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_36"
                    android:background="@color/transparent"
                    android:gravity="center|right"
                    android:text="作业区段"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText,RtlHardcoded"/>

                <TextView
                    android:id="@+id/recyclerview_right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/transparent"
                    android:drawableEnd="@drawable/fold"
                    android:gravity="center_vertical"
                    android:hint="请选择作业区段"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    tools:ignore="HardcodedText,InefficientWeight"/>

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_below="@id/ll_quduan"
                android:layout_marginEnd="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_95"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_select_start"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_60"
            android:background="@drawable/bg_circle"
            android:visibility="invisible">


            <ProgressBar
                style="@style/mProgress_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateDuration="2500"
                android:padding="@dimen/dp_8"/>

            <Chronometer
                android:id="@+id/ct_timer_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_28"/>

            <TextView
                android:id="@+id/tv_temp_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ct_timer_circle"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/caiji_time"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_temp_1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="点击暂停"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                tools:ignore="HardcodedText,RtlSymmetry"/>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/transition"
            android:orientation="vertical"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg03_white"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/caiji_time"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="RtlSymmetry"/>


                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_temp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_40"
                    android:visibility="visible"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_carryon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_55"
                    android:layout_weight="1"
                    android:background="@drawable/continue01"
                    android:gravity="center"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_55"
                    android:layout_weight="1"
                    android:background="@drawable/end02"
                    android:gravity="center"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@color/transition"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg03_white"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_time_distance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/transition"
                    android:gravity="center"
                    android:textColor="@color/red_des_msg"
                    android:textSize="@dimen/sp_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/transition"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center"
                        android:text="@string/type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:id="@+id/tv_quduan_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/transition"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"/>

                    <EditText
                        android:id="@+id/edt_msg_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_40"
                        android:background="@drawable/shape_gray_line"
                        android:gravity="center_vertical"
                        android:hint="请填写名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="HardcodedText,LabelFor,RtlSymmetry,TextFields"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@color/transition"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center"
                        android:text="@string/photo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:layout_marginEnd="@dimen/dp_8"
                        tools:ignore="HardcodedText,TextFields"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_release"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:background="@drawable/publish"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_beginorstop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/caiji"
            android:visibility="visible"/>

    </RelativeLayout>


</LinearLayout>