<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="centerCrop"/>

        <CheckBox
            android:id="@+id/cb_select_tree"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:background="@drawable/choose_seletor"
            android:button="@null"
            android:focusable="false"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/icon_state"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/id_treenode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_gpstime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_12"/>

        <TextView
            android:id="@+id/tv_acc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/tv_gpstime"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_12"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_acc"
            android:layout_marginBottom="@dimen/dp_3"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_gpstime"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_12"/>

    </RelativeLayout>

</LinearLayout>