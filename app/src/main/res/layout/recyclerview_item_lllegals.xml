<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transition">

    <RelativeLayout
        android:id="@+id/ll_layout_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg05">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/work"
            tools:ignore="ContentDescription,RtlSymmetry"/>
        <!--android:src="@drawable/work"-->

        <ImageView
            android:id="@+id/iv_item_unread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_11"
            android:src="@drawable/shape_red_dot8"
            android:visibility="invisible"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_toEndOf="@id/iv_item_image"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_80"
            android:paddingTop="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/gray_3f"
            tools:ignore="HardcodedText,RtlSymmetry"/>
        <!--android:textSize="@dimen/sp_16"-->

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|right"
            android:paddingEnd="@dimen/sp_15"
            android:paddingTop="@dimen/dp_10"
            android:singleLine="true"
            android:text="13:52"
            android:textColor="@color/gray_99"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>
        <!--android:textSize="@dimen/sp_14"-->

        <TextView
            android:id="@+id/tv_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_time"
            android:layout_toEndOf="@id/iv_item_image"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_80"
            android:singleLine="true"
            android:textColor="@color/gray_87"
            tools:ignore="HardcodedText,RtlSymmetry"/>

        <TextView
            android:id="@+id/tv_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_type"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@id/iv_item_image"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_80"
            android:singleLine="true"
            android:textColor="@color/gray_87"
            tools:ignore="HardcodedText,RtlSymmetry"/>


    </RelativeLayout>

</LinearLayout>

