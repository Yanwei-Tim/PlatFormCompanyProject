<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transition"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@drawable/bg_location2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/transition"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <TextView
                android:id="@+id/tv_item_chiwei"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center_vertical"
                android:textColor="@color/gray_21"
                android:textSize="@dimen/sp_13"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@color/list_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center"
                android:singleLine="true"
                android:text="电话"
                android:textColor="@color/black_32"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

            <TextView
                android:id="@+id/tv_item_phonename"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center_vertical"
                android:textColor="@color/gray_05"
                android:textSize="@dimen/sp_13"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center"
                android:singleLine="true"
                android:text="班组"
                android:textColor="@color/black_32"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

            <TextView
                android:id="@+id/tv_item_classname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center_vertical"
                android:textColor="@color/black_32"
                android:textSize="@dimen/sp_13"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center"
                android:singleLine="true"
                android:text="地址"
                android:textColor="@color/black_32"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

            <TextView
                android:id="@+id/tv_item_addressname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/transition"
                android:gravity="center_vertical"
                android:textColor="@color/black_32"
                android:textSize="@dimen/sp_13"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/transition"
            android:orientation="horizontal">

            <View
                android:id="@+id/item_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transition"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_item_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/video1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="查看视频"
                android:textColor="@color/gray_05"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                tools:ignore="HardcodedText"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transition"/>

            <TextView
                android:id="@+id/tv_item_track"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/locus"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="查看轨迹"
                android:textColor="@color/gray_05"
                android:textSize="@dimen/sp_13"
                android:visibility="visible"
                tools:ignore="HardcodedText"/>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_item_native"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/navigation"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="导航"
                android:textColor="@color/gray_05"
                android:textSize="@dimen/sp_13"
                android:visibility="visible"
                tools:ignore="HardcodedText"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transition"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
