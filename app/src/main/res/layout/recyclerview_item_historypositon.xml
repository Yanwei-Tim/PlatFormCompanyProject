<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout_item"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    tools:ignore="UselessParent">
    <!--android:background="@drawable/shape_cricle_bg_gray_top0">-->

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_10"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription,RtlSymmetry"/>
    <!--android:src="@drawable/work"-->


    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_toEndOf="@id/iv_item_image"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_80"
        android:paddingTop="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/order_tab_text"
        android:textSize="@dimen/sp_16"
        tools:ignore="HardcodedText,RtlSymmetry"/>
    <!--android:textSize="@dimen/sp_16"-->

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/sp_15"
        android:paddingTop="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/gray_7a"
        android:textSize="@dimen/sp_13"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>
    <!--android:textSize="@dimen/sp_14"-->

    <TextView
        android:id="@+id/tv_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_title"
        android:layout_toEndOf="@id/iv_item_image"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_80"
        android:textColor="@color/black_32"
        android:textSize="@dimen/sp_14"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <!--<TextView
        android:id="@+id/tv_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_type"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@id/iv_item_image"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_80"
        android:singleLine="true"
        android:textColor="@color/gray_87"
        tools:ignore="HardcodedText,RtlSymmetry"/>-->


</RelativeLayout>


