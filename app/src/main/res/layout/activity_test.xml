<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/title_bar_mvp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_friend_acatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/ice_image_i_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include"
        tools:ignore="ContentDescription,RtlHardcoded"/>

    <TextView
        android:id="@+id/tv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#404040"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/iv_friend_acatar"
        app:layout_constraintTop_toTopOf="@+id/iv_friend_acatar"
        tools:ignore="RtlHardcoded"
        tools:text="共享对象"/>

    <TextView
        android:id="@+id/tv_friend_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="#404040"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_friend_acatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_friend_acatar"
        tools:ignore="RtlHardcoded"
        tools:text="我有句mmp一定要讲"/>

    <TextView
        android:id="@+id/tv_mine_friend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_friend_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_friend_name"
        tools:ignore="RtlHardcoded"
        tools:text="刚刚"/>


</android.support.constraint.ConstraintLayout>
