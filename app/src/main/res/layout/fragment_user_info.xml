    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/color_f6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <ImageView
            android:id="@+id/img_user_view"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/sp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/staff"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toEndOf="@id/img_user_view"
            android:textColor="@color/gray_20"
            android:textSize="@dimen/sp_18"/>

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@id/img_user_view"
            android:textColor="@color/gray_3f"
            android:textSize="@dimen/sp_14"
            tools:ignore="HardcodedText"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/sp_15"
            android:layout_marginStart="@dimen/sp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/user_back"
            tools:ignore="ContentDescription"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/color_f6"/>

    <com.yuefeng.usercenter.ui.view.UserInfoItemView
        android:id="@+id/ui_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_customer_selector"
        app:iconLeft="@drawable/ic_share_app"
        app:itemText="修改密码"/>

    <com.yuefeng.usercenter.ui.view.UserInfoItemView
        android:id="@+id/ui_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:iconLeft="@drawable/ic_person_customer_service"
        app:itemText="清理缓存"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/list_divider"/>

    <com.yuefeng.usercenter.ui.view.UserInfoItemView
        android:id="@+id/ui_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_customer_selector"
        app:iconLeft="@drawable/ic_person_us"
        app:itemText="关于软件"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/list_divider"/>


    <com.yuefeng.usercenter.ui.view.UserInfoItemView
        android:id="@+id/ui_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_customer_selector"
        app:iconLeft="@drawable/ic_language_choose"
        app:itemText="退出登录"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6"/>

</LinearLayout>
