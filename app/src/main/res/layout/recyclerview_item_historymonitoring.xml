<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_5"
        android:text="2018-11-09 00:00:00---2018-10-09 23:59:59"
        android:textColor="@color/black_32"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry"/>

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_time"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_3"/>


    <TextView
        android:id="@+id/tv_item_startaddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:layout_below="@id/tv_item_time"
        android:layout_toEndOf="@id/iv_start"
        android:gravity="center_vertical"
        android:textColor="@color/gray_21"
        android:textSize="@dimen/sp_13"
        tools:ignore="HardcodedText,RtlSymmetry"/>


    <TextView
        android:id="@+id/tv_item_endaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_startaddress"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@id/iv_start"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_3"
        android:textColor="@color/gray_21"
        android:textSize="@dimen/sp_13"
        tools:ignore="RtlSymmetry"/>

    <View
        style="@style/horizontal_line"
        android:layout_below="@id/iv_start"
        android:layout_marginTop="@dimen/dp_5"/>


</RelativeLayout>