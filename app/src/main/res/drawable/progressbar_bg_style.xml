<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（white）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/pickerview_wheelview_textcolor_divider"
                      android:endColor="@color/pickerview_wheelview_textcolor_divider" />
        </shape>
    </item>

    <!--  设置进度条颜色（蓝色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="@color/titel_color"
                           android:endColor="@color/titel_color" />
            </shape>
        </clip>
    </item>

</layer-list>